<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_day01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_day02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day02"
        app:layout_constraintLeft_toRightOf="@+id/btn_day01"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_day03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day03"
        app:layout_constraintLeft_toRightOf="@+id/btn_day02"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_day04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day04"
        app:layout_constraintLeft_toRightOf="@+id/btn_day03"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>